<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.justjava.MainActivity">

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantityLabel"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/topHeaderMargin"
        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_marginBottom="@dimen/bottomMargin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/incButton"
            android:layout_width="@dimen/cremSize"
            android:layout_height="@dimen/cremSize"
            android:text="@string/incButtonText"
            android:layout_marginLeft="@dimen/leftMargin"
            android:layout_marginBottom="@dimen/bottomMargin"
            android:onClick="increment"/>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="@dimen/quantityTextWidth"
            android:layout_height="wrap_content"
            android:text="@string/quantityText"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/leftMargin"
            android:layout_marginBottom="@dimen/bottomMargin"/>

        <Button
            android:id="@+id/decButton"
            android:layout_width="@dimen/cremSize"
            android:layout_height="@dimen/cremSize"
            android:text="@string/decButtonText"
            android:layout_marginLeft="@dimen/leftMargin"
            android:layout_marginBottom="@dimen/bottomMargin"
            android:onClick="decrement"/>
    </LinearLayout>

    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priceLabel"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/leftMargin"/>

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priceText"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginBottom="@dimen/bottomMargin"/>

    <Button
        android:id="@+id/orderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orderButtonText"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginLeft="@dimen/leftMargin"
        android:textAllCaps="true"
        android:onClick="submitOrder"/>
</LinearLayout>
